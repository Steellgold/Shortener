// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id      String   @id @default(uuid())
  email   String   @unique
  isPaid  Boolean  @default(false)
  apiKeys ApiKey[]
  links   Link[]
}

model ApiKey {
  id         String    @id @default(cuid())
  createdAt  DateTime  @default(now())
  disabledAt DateTime?
  name       String?
  usageByDay Json      @default("[]")
  key        String    @unique
  user       User      @relation(fields: [userId], references: [id])
  userId     String
}

model Link {
  id             String    @id @default(cuid())
  createdAt      DateTime? @default(now())
  updatedAt      DateTime? @updatedAt
  deletedAt      DateTime?
  url            String
  shortUrl       String    @unique
  subdomain      String?
  password       String?
  clicksLimit    Int?      @default(0)
  countriesLimit Json?     @default("[]")
  expiresAt      DateTime?
  user           User?     @relation(fields: [userId], references: [id])
  userId         String?
  stats          Stats[]
}

model Stats {
  id               String            @id @default(cuid())
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  deletedAt        DateTime?
  link             Link              @relation(fields: [linkId], references: [id])
  linkId           String
  countries        Country[]
  browsers         Browser[]
  platforms        Platform[]
  referrers        Referrer[]
  operatingSystems OperatingSystem[]
  clicks           Int               @default(0)
}

model Country {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  stats     Stats     @relation(fields: [statsId], references: [id])
  statsId   String
  country   String
  count     Int
}

model Browser {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  stats     Stats     @relation(fields: [statsId], references: [id])
  statsId   String
  browser   String
  count     Int
}

model Platform {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  stats     Stats     @relation(fields: [statsId], references: [id])
  statsId   String
  platform  String
  count     Int
}

model Referrer {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  stats     Stats     @relation(fields: [statsId], references: [id])
  statsId   String
  referrer  String
  count     Int
}

model OperatingSystem {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  stats     Stats     @relation(fields: [statsId], references: [id])
  statsId   String
  os        String
  count     Int
}
