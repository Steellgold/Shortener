// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql" // Temporary, will be changed to postgresql with Supabase soon
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id     String  @id @default(uuid())
  email  String  @unique
  isPaid Boolean @default(false)
  links  Link[]
}

model Link {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  url       String
  shortUrl  String
  subdomain String
  password  String?
  expiresAt DateTime?
  user      User      @relation(fields: [userId], references: [id])
  userId    String
}
